generator client {
provider = "prisma-client-js"
}


datasource db {
provider = "postgresql"
url = env("DATABASE_URL")
}


model Circular {
id Int @id @default(autoincrement())
url String
type ClassType
title String @default("")
createdAt DateTime @default(now())
teacherId String
}


model Timetable {
id Int @id @default(autoincrement())
url String
className String
section String
createdAt DateTime @default(now())
}


model Homework {
id Int @id @default(autoincrement())
className String
section String
title String
pdf_url String
teacherId String
createdAt DateTime @default(now())
}

model Event{
  id Int @id @default(autoincrement())
  type EventType
  title String
  teacherId String
}

model Student{
  id Int @id @default(autoincrement())
  name String
  class String
  section String
  attendence Int @default(0)
  admissionNumber Int @default(0)
  details String[] @default([])
}

enum EventType{
  JUNIOR
PRIMARY
SENIOR
  ALL
}


enum ClassType {
JUNIOR
PRIMARY
SENIOR
ALL
}